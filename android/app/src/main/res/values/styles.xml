<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
        <item name="android:statusBarColor">@color/app_bg</item>

    </style>

    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#C51D20</item>
        <item name="android:textColor">#C51D20</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splashscreen_bg</item>
        <item name="android:background">@drawable/background_splash</item>
    </style>
    <style name="SplashStatusBarTheme" parent="SplashScreen_SplashTheme">
               <item name="android:statusBarColor">@color/splashscreen_bg</item>
            </style>
</resources>
